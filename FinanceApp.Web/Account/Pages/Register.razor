@page "/Account/Register"
@using System.ComponentModel.DataAnnotations

<PageTitle>Register</PageTitle>


<h1>Register</h1>

@* asp-route-returnUrl="@ReturnUrl"
OnValidSubmit *@

<div class="row">
	<div class="col-md-4">
		<EditForm Model="Input" method="post" OnSubmit="RegisterUser" FormName="register">

		<h2>Create a new account.</h2>
		<hr/>
		<div class="form-floating mb-3">
			<input type="email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
			<label for="email">Email</label>
		</div>
		<div class="form-floating mb-3">
			<input type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
			<label for="password">Password</label>
		</div>
		<div class="form-floating mb-3">
			<input type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
			<label for="confirm-password">Confirm Password</label>
		</div>
		<button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
		</EditForm>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h3>Use another service to register.</h3>
			<hr />
			<button class="btn btn-primary">Register with Facebook</button>
			<button class="btn btn-primary">Register with Google</button>
		</section>
	</div>
</div>

